<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户资料</title>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/pager.css" rel="stylesheet" />
    <link href="~/css/Tooltip.css" rel="stylesheet" />
    <link href="~/skins/aero.css" rel="stylesheet" />
    <link href="~/css/sweetalert2.css" rel="stylesheet" />
</head>
<body onload="onloadprovince()">
    <form id="frm">
        <div class="place">
            <span>位置：</span>
            <ul class="placeul">
                @Html.Raw(ViewData["location"].ToString())
            </ul>
        </div>

        <div class="rightinfo">
            <div class="tools">
                <ul class="toolbar">
                    <li class="click" id="open" onclick="javascript:showDialog()"><span><img src="../images/t01.png" /></span>添加</li>
                </ul>
            </div>
            <div id="userlist">
                <table class="tablelist">
                    <thead>
                        <tr>
                            <th>用户名</th>
                            <th>性别</th>
                            <th>真名</th>
                            <th>省</th>
                            <th>市</th>
                            <th>详细地址</th>
                            <th>手机</th>
                            <th>传真</th>
                            <th>邮箱</th>
                            <th>QQ</th>
                            <th>笔名</th>
                            <th>状态</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>
            <div id='page-bottom' class='pageinfo'></div>
        </div>

        <div id="userinfo" style="display:none;">
            <table border="1" bordercolor="#0000FF" width="400" height="500" cellpadding="0" cellspacing="0">
                <caption><font size="+1">个人信息</font></caption>
                <tr>
                    <td>用户名:</td>
                    <td>
                        <input id="username" class="comuserinfo" width="200" type="text" name="userName" reg="^[\s\S]+$" tip="用户不能为空！">
                    </td>
                </tr>
                <tr>
                    <td>密  码:</td>
                    <td>
                        <input id="password" class="comuserinfo" width="200" type="text" name="password" reg="^[\s\S]+$" tip="密码不能为空！" />
                    </td>
                </tr>
                <tr>
                    <td>性  别</td>
                    <td>男<input type="radio" name="sex" value="1" /> 女<input type="radio" name="sex" value="2" /> </td>
                </tr>
                <tr>
                    <td>实  名:</td>
                    <td><input id="realname" class="comuserinfo" type="text" name="realName" reg="^[\s\S]+$" tip="实名不能为空！" /></td>
                </tr>
                <tr>
                    <td>标  题:</td>
                    <td><input id="title" class="comuserinfo" type="text" name="title" /></td>
                </tr>
                <tr>
                    <td>手  机:</td>
                    <td><input id="phone" class="comuserinfo" type="text" name="phone" /></td>
                </tr>
                <tr>
                    <td>传  真:</td>
                    <td><input id="fax" class="comuserinfo" type="text" name="fax" /></td>
                </tr>
                <tr>
                    <td>email:</td>
                    <td><input id="email" class="comuserinfo" type="text" name="email" /></td>
                </tr>
                <tr>
                    <td>
                        省/直辖市:
                        <select id="province" name=province onchange="cityName(this.value);">
                            <option value="">
                                请选择省名
                            </option>
                        </select>
                    </td>
                    <td>
                        城市:
                        <select id="city" name="city">
                            <option value="">
                                请选择城市名
                            </option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>详细地址:</td>
                    <td><input id="address" class="comuserinfo" type="text" name="address" reg="^[\s\S]+$" tip="详细地址不能为空！" /></td>
                </tr>
                <tr>
                    <td>QQ:</td>
                    <td><input id="QQ" class="comuserinfo" type="text" name="QQ" /></td>
                </tr>
                <tr>
                    <td>笔  名:</td>
                    <td><input id="nickname" class="comuserinfo" type="text" name="nickname" /></td>
                </tr>
                <tr>
                    <td>所属部门:</td>
                    <td>
                        <select id="dept" name="deptId" class="comuserinfo" style=" width:100%;">
                            <option selected="selected">请选择部门</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>所属角色:</td>
                    <td>
                        <select id="role" name="roleId" class="comuserinfo" style=" width:100%;">
                            <option selected="selected">请选择角色</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td align="center" colspan="2">
                        <input class="btn" type="submit" value="确定" onclick="javascript:addUser()">
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <input class="btn" type="submit" value="取消" onclick="art.dialog.list['userinfo'].close();" />
                    </td>
                </tr>
            </table>
        </div>
    </form>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.pager.js"></script>
    <script src="~/Scripts/Tooltip.mini.js"></script>
    <script src="~/Scripts/artDialog.source.js"></script>
    <script src="~/Scripts/iframeTools.source.js"></script>
    <script src="~/Scripts/Common.js" type="text/javascript"></script>
    <script src="~/js/user.js"></script>
    <script src="~/Scripts/onloadprovince.js"></script>
    <script src="~/Scripts/sweetalert2.js"></script>
</body>
</html>
