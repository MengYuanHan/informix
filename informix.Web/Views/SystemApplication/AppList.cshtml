<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>应用列表</title>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/pager.css" rel="stylesheet" />
    <link href="~/css/Tooltip.css" rel="stylesheet" />
    <link href="~/skins/aero.css" rel="stylesheet" />
</head>
<body>
    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            @Html.Raw(ViewData["location"].ToString())
        </ul>
    </div>
    <div class="rightinfo">
        <div class="tools">
            <ul class="toolbar">
                <li class="click" id="open" onclick="javascript:showDialog()"><span>
                    <img src="../images/t01.png" /></span>添加</li>
            </ul>
        </div>
        <table class="tablelist">
            <thead>
                <tr>
                    <th>
                        <input name="" type="checkbox" value="" checked="checked" /></th>
                    <th>应用编号</th>
                    <th>应用名称</th>
                    <th>应用描述</th>
                    <th>url</th>
                    <th>排列顺序</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div id='page-bottom' class='pageinfo'></div>
    </div>

    <div id="appList" style="display: none;">
        <table border="1" bordercolor="#0000FF" width="400" height="400" cellpadding="0" cellspacing="0">
            <caption><font size="+1">应用模块</font></caption>

            <tr>
                <td>应用名称:</td>
                <td>
                    <input id="appName" class="comuserinfo" width="200" type="text" name="username" reg="^[\s\S]+$" tip="用户不能为空！">
                </td>
            </tr>
            <tr>
                <td>应用描述:</td>
                <td>
                    <input id="decription" class="comuserinfo" width="200" type="text" name="username" reg="^[\s\S]+$" tip="用户不能为空！">
                </td>
            </tr>
            <tr>
                <td>url:</td>
                <td>
                    <input id="appurl" class="comuserinfo" width="200" type="text" name="username" reg="^[\s\S]+$" tip="用户不能为空！">
                </td>
            </tr>
            <tr>
                <td>排列顺序:</td>
                <td>
                    <input id="apporders" class="comuserinfo" width="200" type="text" name="username" reg="^[\s\S]+$" tip="用户不能为空！">
                </td>
            </tr>
            <tr>
                <td>图标:</td>
                <td>
                    <select id="icon" class="comuserinfo" onchange="getModule()">
                        <option value="../images/leftico01.png">图标一</option>
                        <option value="../images/leftico02.png">图标二</option>
                        <option value="../images/leftico03.png">图标三</option>
                        <option value="../images/leftico04.png">图标四</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td align="center" colspan="2">
                    <input class="btn" type="submit" value="添加" onclick="javascript: addApp()">
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <input class="btn" type="submit" value="取消" onclick="art.dialog.list['appList'].close();" />
                </td>
            </tr>
        </table>
    </div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.pager.js"></script>
    <script src="~/Scripts/artDialog.source.js"></script>
    <script src="~/Scripts/iframeTools.source.js"></script>
    <script src="~/Scripts/jquery-migrate-1.2.1.js"></script>
    <script src="~/Scripts/Common.js" type="text/javascript"></script>
    <script src="~/js/app.js"></script>
</body>
</html>
